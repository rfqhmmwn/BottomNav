<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="BANGUN DATAR"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Segitiga"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/bleach"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/Lingkaran"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/bulet"
        app:layout_constraintBottom_toBottomOf="@+id/Segitiga"
        app:layout_constraintStart_toEndOf="@+id/Segitiga"
        app:layout_constraintTop_toTopOf="@+id/Segitiga" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="segitiga"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Segitiga"
        app:layout_constraintStart_toStartOf="@+id/Segitiga"
        app:layout_constraintTop_toBottomOf="@+id/Segitiga" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="lingkaran"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Lingkaran"
        app:layout_constraintStart_toStartOf="@+id/Lingkaran"
        app:layout_constraintTop_toBottomOf="@+id/Lingkaran" />

    <ImageView
        android:id="@+id/Persegi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stop"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/PersegiPanjang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/Persegi"
        app:layout_constraintEnd_toEndOf="@+id/Lingkaran"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="persegi"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Persegi"
        app:layout_constraintStart_toStartOf="@+id/Persegi"
        app:layout_constraintTop_toBottomOf="@+id/Persegi" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="persegi panjang"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PersegiPanjang"
        app:layout_constraintStart_toStartOf="@+id/PersegiPanjang"
        app:layout_constraintTop_toBottomOf="@+id/PersegiPanjang" />

    <ImageView
        android:id="@+id/SegiEnam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/polygon"
        app:layout_constraintEnd_toEndOf="@+id/PersegiPanjang"
        app:layout_constraintStart_toStartOf="@+id/Persegi"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="segi enam"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/SegiEnam"
        app:layout_constraintStart_toStartOf="@+id/SegiEnam"
        app:layout_constraintTop_toBottomOf="@+id/SegiEnam" />


</androidx.constraintlayout.widget.ConstraintLayout>